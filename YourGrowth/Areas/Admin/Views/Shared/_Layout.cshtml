
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Pages</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    @*
        Todo:
        This style: navbar-inverse is removing the main menu from sub areas
        Do I want this functionality?*@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Your Growth", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @*Need to resolve menu problems*@
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="row">
            @*TODO
                needs padding or something to view the links
            *@
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Programs", "Programs", "Admin")</li>
                    <li>@Html.ActionLink("Routines", "Routines", "Admin")</li>
                    <li>@Html.ActionLink("Exercises", "Exercies", "Admin")</li>
                    <li>@Html.ActionLink("Groups", "Groups", "Admin")</li>
                    <li>@Html.ActionLink("Muscles", "Muscles", "Admin")</li>
                </ul>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            Workout Administration Pages
        </footer>
    </div>

    <script src="~/Scripts/jquery-2.2.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>